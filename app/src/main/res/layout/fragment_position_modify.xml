<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="eu.mobile.application.collector.fragment.positionModify.PositionModifyFragmentViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/fragment_position_modify_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:inputType="text"
            android:text="@={viewModel.positionNameNotifier}"
            android:enabled="@{!viewModel.isLoading}"
            android:hint="@string/fragment_position_modify_position_name_entry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/fragment_position_modify_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_camera"
            android:onClick="@{()->viewModel.imageClicked()}"
            app:layout_constraintTop_toBottomOf="@id/fragment_position_modify_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/fragment_position_modify_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_position_modify_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Ocena"/>

        <RatingBar
            android:id="@+id/fragment_position_modify_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:numStars="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_position_modify_rating_text" />

        <EditText
            android:id="@+id/fragment_position_modify_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/fragment_position_modify_description"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength ="2000"
            android:scrollHorizontally="false"
            android:text="@={viewModel.positionTotalNotifier}"
            android:enabled="@{!viewModel.isLoading}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_position_modify_rating_bar" />

        <EditText
            android:id="@+id/fragment_position_entry_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/fragment_position_entry_total"
            android:inputType="number"
            android:maxLength ="2000"
            android:scrollHorizontally="false"
            android:text="@={viewModel.positionDescriptionNotifier}"
            android:enabled="@{!viewModel.isLoading}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_position_modify_description" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="20dp"
            android:enabled="@{!viewModel.isLoading}"
            android:onClick="@{() -> viewModel.acceptPositionPressed()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_menu_save" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>